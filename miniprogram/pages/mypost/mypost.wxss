/* pages/me/mypost/mypost.wxss */
/*排序相关样式*/
/*排序容器*/
@import "../home/home.wxss";
.sort {
  border: 1rpx solid #2c2c2c;
  width: 100%;
  display: inline-flex;
}
/*类别容器*/
.sortMethods {
  width: 90%;
  padding: 5rpx;
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
}
/*排序类别*/
.sortType {
  border: 0.1rpx solid blue;
  padding: 5rpx;
  font-size: small;
  width: auto;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
}
.sortType:hover {
  background-color: blue;
}
.sortOrder view{
  font-size: small;
  border: 0.1rpx solid blue;
}
.sortOrder view:hover{
  font-size: small;
  border: 0.1rpx solid blue;
  background-color: blue;
}

/*已发布列表相关*/
.postList .postItem {
    position: relative;
    width: 100vw;
    border-bottom: 2rpx solid #e9e9e9;
    box-sizing: border-box;
    background: #fff;
    z-index: 999;
}
.postList .postItem movable-area {
    height: 200rpx;
    width: calc(100vw - 240rpx);
}
.postList .postItem movable-view {
    height: 200rpx;
    width: 100vw;
    background: #fff;
    z-index: 999;
}
.postMoableItem {
    display: inline-flex;
}

.postList .postItem .postItemMovableOperates {
    position: absolute;
    display: inline-flex;
    top: 0;
    bottom: 0;
    right: 0;
    width: 240rpx;
    font-size: 24rpx;
    color: #ffffff;
    line-height: 200rpx;
    z-index: 1;
    background: blue;
    text-align: center;
}
.edit {
    position: relative;
    background-color:#4486d1;
    width: 120rpx;
}
.delete {
    width: 120rpx;
    position: relative;
    background-color: rgb(255, 59, 59);
}
